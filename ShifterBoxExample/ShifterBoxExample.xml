<GuiXml>
    <Controls>
        <TopLevelControl name="ShifterBoxExampleMainWindow" mouseEnabled="true" movable="true" clampedToScreen="true" hidden="false">
            <Anchor point="BOTTOM" relativeTo="GuiRoot" relativePoint="BOTTOM" offsetX="0" offsetY="-200"/>
            <Dimensions x="500" y="500" />
            <Controls>
                <Backdrop name="$(parent)Background" inherits="ZO_ThinBackdrop" />

                <Label name="$(parent)Header" font="ZoFontWindowTitle" color="CFDCBD" wrapMode="ELLIPSIS" verticalAlignment="CENTER" text="ShifterBox Example">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="16" offsetY="10"/>
                </Label>



                <Button name="$(parent)AddEntryToLeft" inherits="ZO_DefaultButton">
                    <Anchor point="BOTTOMLEFT" offsetX="20" offsetY="-20"/>
                    <Controls>
                        <Label name="$(parent)AddEntryToLeftLabel" font="ZoFontGame" verticalAlignment="CENTER" horizontalAlignment="CENTER" text="Add Entry To Left">
                            <Dimensions y="30" />
                            <Anchor point="CENTER" />
                        </Label>
                    </Controls>
                </Button>

                <Button name="$(parent)ClearLeftList" inherits="ZO_DefaultButton">
                    <Anchor point="BOTTOMLEFT" relativeTo="$(parent)AddEntryToLeft" relativePoint="TOPLEFT" offsetY="-20"/>
                    <Controls>
                        <Label name="$(parent)ClearLeftListLabel" font="ZoFontGame" verticalAlignment="CENTER" horizontalAlignment="CENTER" text="Clear Left List">
                            <Dimensions y="30" />
                            <Anchor point="CENTER" />
                        </Label>
                    </Controls>
                </Button>

                <Button name="$(parent)ClearRightList" inherits="ZO_DefaultButton">
                    <Anchor point="LEFT" relativeTo="$(parent)ClearLeftList" relativePoint="RIGHT" offsetX="20"/>
                    <Controls>
                        <Label name="$(parent)ClearRightListLabel" font="ZoFontGame" verticalAlignment="CENTER" horizontalAlignment="CENTER" text="Clear Right List">
                            <Dimensions y="30" />
                            <Anchor point="CENTER" />
                        </Label>
                    </Controls>
                </Button>

            </Controls>
        </TopLevelControl>
    </Controls>
</GuiXml>
